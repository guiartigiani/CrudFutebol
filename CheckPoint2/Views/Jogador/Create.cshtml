@model Checkpoint2.Models.Jogador

@{
    ViewData["Title"] = "Create";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

    <h4>Registro de Novos Jogadores</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="NomeJogador" class="control-label"></label>
                    <input asp-for="NomeJogador" class="form-control" />
                    <span asp-validation-for="NomeJogador" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="mb-3">
                        <label asp-for="Posicao"></label>
                        <select asp-for="Posicao" asp-items="@Html.GetEnumSelectList<Posicao>()" class="form-select">
                            <option>Selecione</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Nacionalidade" class="control-label"></label>
                    <input asp-for="Nacionalidade" class="form-control" />
                    <span asp-validation-for="Nacionalidade" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DataNasc" class="control-label"></label>
                    <input asp-for="DataNasc" class="form-control" />
                    <span asp-validation-for="DataNasc" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" style="margin-top: 20px;" />
                </div>
            </form>
        </div>
    </div>



    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
